<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <events>
      <event name="item:added">
        <handler type="Vitality.Website.SC.Events.ItemEventsHandler, Vitality.Website.SC" method="SetSubFolderInsertOptions" />
      </event>
      <event name="item:saved">
        <handler type="Vitality.Website.SC.Events.ItemEventsHandler, Vitality.Website.SC" method="SetSeoFriendlyItemName" />
        <handler type="Vitality.Website.SC.Events.ItemEventsHandler, Vitality.Website.SC" method="SetSplitCamelCaseFieldTitle" />
      </event>
      <event name="publish:end">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <patch:delete />
          </sites>
          <sites hint="list">
            <site>presales</site>
            <site>advisers</site>
          </sites>
        </handler>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <patch:delete />
          </sites>
          <sites hint="list">
            <site>presales</site>
            <site>advisers</site>
          </sites>
        </handler>
      </event>
    </events>
  </sitecore>
</configuration>