<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
      <log4net>
        <logger name="Vitality.Website.SC.Utilities.PresalesLog" additivity="false">
          <level value="INFO" />
          <appender-ref ref="PresalesLogFileApender" />
        </logger>
        <appender name="PresalesLogFileApender" type="log4net.Appender.SitecoreLogFileAppender, Sitecore.Logging">
          <file value="$(dataFolder)/logs/PresalesLog.{date}.txt" />
          <appendToFile value="true" />
          <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%4t %d{ABSOLUTE} %-5p %m%n" />
          </layout>
          <encoding value="utf-8" />
        </appender>
      </log4net>
  </sitecore>
</configuration>
