<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <sc.variable name="dataFolder">
      <patch:attribute name="value">/App_Data</patch:attribute>
    </sc.variable>
    <linkManager defaultProvider="sitecore">
      <providers>
        <add name="sitecore">
          <patch:attribute name="alwaysIncludeServerUrl">true</patch:attribute>
          <patch:attribute name="languageEmbedding">never</patch:attribute>
          <patch:attribute name="lowercaseUrls">true</patch:attribute>
        </add>
      </providers>
    </linkManager>
    <settings>
      <setting name="WebStylesheet" 
               set:value="/css/rich-text-editor-1.0.0.min.css" />
      <setting name="HtmlEditor.DefaultProfile" 
               set:value="/sitecore/system/Settings/Html Editor Profiles/Vitality Rich Text Limited" />
      <setting name="HtmlEditor.LineBreak" 
               set:value="br" />
      <setting name="Media.RequestExtension"
               set:value="" />
      <setting name="Media.MediaLinkPrefix"
               set:value="media-online/" />
    </settings>
    <customHandlers>
      <handler trigger="media-online/" handler="sitecore_media.ashx"/>
    </customHandlers>
  </sitecore>
</configuration>