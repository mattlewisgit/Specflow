<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <sc.variable name="dataFolder">
      <patch:attribute name="value">/App_Data</patch:attribute>
    </sc.variable>
    <linkManager defaultProvider="sitecore">
      <providers>
        <add name="sitecore">
          <patch:attribute name="languageEmbedding">never</patch:attribute>
        </add>
      </providers>
    </linkManager>
    <settings>
      <setting name="WebStylesheet" 
               set:value="/css/rich-text-editor.css" />
      <setting name="HtmlEditor.DefaultProfile" 
               set:value="/sitecore/system/Settings/Html Editor Profiles/Vitality Rich Text Limited" />
      <setting name="HtmlEditor.LineBreak" 
               set:value="br" />
    </settings>
  </sitecore>
</configuration>