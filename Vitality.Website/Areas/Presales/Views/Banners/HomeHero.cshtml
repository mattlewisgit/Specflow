@using Vitality.Website.Extensions.Views
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Vitality.Website.Areas.Presales.ComponentTemplates.Banners.HomeHero>

@using (BeginEditFrame(Model, "Edit background image", m => m.PosterImage))
{
    <div class="home-hero @this.ImageRelativePosition() @this.FontTheme()" style="@this.BackgroundImage()">
        <h1 class="h4">@Editable(Model, m => m.Headline)</h1>
        <h2 class="h1-xlarge">@Editable(Model, m => m.SecondHeadline)</h2>
        <p>
            @Editable(Model, m => m.OpeningParagraph)
        </p>
    </div>
}
