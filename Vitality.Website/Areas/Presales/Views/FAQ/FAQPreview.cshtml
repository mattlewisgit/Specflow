@using Glass.Mapper.Sc.Web.Mvc
@using Sitecore.Mvc
@using Vitality.Website.Areas.Presales.Models.FAQ
@inherits GlassView<FeaturedQuestions>

<h1>FAQ Preview</h1>

@{
    int k = 0;
}
<div id="example_1" class="faq_leader">
    <div class="header">
        <h2>@Editable(m => Model.Title)</h2>
        <p class="paragraph-emphasis">@Editable(m => Model.Subtitle)</p>
    </div>

    <div class="faqs">
        @{
            var batches = Model.Questions.Select((x, i) => new { x, i }).GroupBy(p => (p.i / 2), p => p.x);
        }
        @foreach (var row in batches)
        {
            <div class="grid">
                @foreach (var questionAnswer in row)
                {
                    <div class="grid-col-6-12">
                        <h6 class="text-detail-block__heading">@Editable(m => questionAnswer.QuestionText)</h6>
                        <div>@Editable(m => questionAnswer.Preview)</div>
                    </div>
                }
            </div>
        }

    </div>

    <div class="more">@Editable(m => Model.CTA)</div>
</div>
