@using Vitality.Website.Extensions.Views
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Vitality.Website.Areas.Presales.ComponentTemplates.FeatureBlocks.BenefitLeader>

@using (BeginEditFrame(Model, "Edit Background image", item => item.BackgroundImage))
{
    <div class="pinch">
        <div class="@this.CssClass() @this.BackgroundColour() @this.ContentAlignment()">
            <div class="@this.CssClass()__image @this.ImageRelativePosition()" style="@this.BackgroundImage()"></div>
            <div class="@this.CssClass()__content-container">
                <div class="@this.CssClass()__content">
                    @if (IsInEditingMode || !string.IsNullOrWhiteSpace(Model.LeadIn))
                    {
                        <h6>@Editable(Model, item => item.LeadIn)</h6>
                    }
                    <h3>@Editable(Model, item => item.Headline)</h3>
                    <p>@Editable(Model, item => item.Body)</p>
                    @Editable(Model, item => item.CallToAction, new { @class = this.ButtonStyle() })
                </div>
            </div>
        </div>
    </div>
}
