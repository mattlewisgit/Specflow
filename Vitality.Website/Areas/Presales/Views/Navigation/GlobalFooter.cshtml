@using Vitality.Website.Extensions
@using Vitality.Website.Extensions.Views
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Vitality.Website.Areas.Presales.ComponentTemplates.Navigation.GlobalFooter>

<footer class="page-footer">
    <div class="page-footer__grid pinch">
        <div class="page-footer__links--small">
            <div class="expander expander--dark  expander--with-style  js-expander-is-accordion">
                @foreach (var footerSection in this.FooterSections())
                {
                <a href="#@footerSection.Name.ToLowerHyphenatedString()" class="expander__link">@Html.Raw(footerSection.Heading)</a>
                <div id="@footerSection.Name.ToLowerHyphenatedString()" class="expander__content">
                    <ul class="page-footer__list page-footer__list--quote">
                        @foreach (var footerLink in footerSection.FooterLinks)
                        {
                            <li>@RenderLink(footerLink, m => m.Link)</li>
                        }
                    </ul>
                </div>
                }
            </div>
        </div>

        <div class="page-footer__logo page-footer__logo--large">
            <a href="/">
                @RenderImage(Model, m => m.Logo, new { @class = "page-footer__logo-img lazyload" })
            </a>
            <p class="page-footer__copyright">
                @Html.Raw(Model.CopyrightStatement)
            </p>
        </div>

        @foreach (var column in this.GroupFooterSectionsByColumn())
        {
        <div class="page-footer__quote">
            @foreach (var footerSection in column)
            {
                <p class="page-footer__header">
                    @Html.Raw(footerSection.Heading)
                </p>

                <ul class="page-footer__list page-footer__list--quote">
                    @foreach (var footerLink in footerSection.FooterLinks)
                    {
                        <li>@RenderLink(footerLink, m => m.Link)</li>
                    }
                </ul>
            }
        </div>
        }

        <div class="page-footer__connect">
        @foreach (var socialLinks in Model.FooterSocialLinksColumn)
        {
            <p class="page-footer__header">@Html.Raw(socialLinks.Heading)</p>
            <ul class="social-icons-list">
            @foreach (var socialLink in socialLinks.SocialLinks)
            {
                <li class="social-icon">
                    @using (BeginRenderLink(socialLink, m => m.Link))
                    {
                        @RenderImage(socialLink, m => m.Image, new {@class= "lazyload" })
                    }
                </li>
            }
            </ul>
        }
        </div>

        <div class="page-footer__logo page-footer__logo--small">
            <a href="/">
                @RenderImage(Model, m => m.Logo, new { @class = "page-footer__logo-img lazyload" })
            </a>
            <p class="page-footer__copyright">
                @Html.Raw(Model.CopyrightStatement)
            </p>
        </div>
    </div>
</footer>