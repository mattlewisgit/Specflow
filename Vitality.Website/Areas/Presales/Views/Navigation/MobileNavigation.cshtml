@using Vitality.Website.Extensions.Views
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Vitality.Website.Areas.Presales.ComponentTemplates.Navigation.MainNavigation>

@* top-bar mobile *@
<div class="top-bar top-bar--small">
    <div class="top-bar__home">
        <a href="/">
            @GlassHtml.RenderLazyImage(Model, m => m.Logo, new { @class = "top-bar__logo" })
        </a>
    </div>

    <ul class="utility-nav--small">

        @if (Model.SearchPage != null)
        {
            <li class="utility-nav__item utility-nav__item--search">
                <div class="utility-nav__inner">
                    @using (BeginRenderLink(Model, item => item.SearchPage))
                    {
                        @GlassHtml.RenderLazyImage(Model, item => item.SearchIcon, new { @alt = Model.SearchAltText })
                        @Html.Raw(Model.SearchPage.Text)

                    }
                </div>
            </li>
        }
        <li class="utility-nav__item utility-nav__item--log-in js-log-in-toggle">
            <div class="utility-nav__inner ">
                @GlassHtml.RenderLazyImage(Model, item => item.LoginIcon, new { @alt = Model.LoginAltText })
                @Html.Raw(Model.LogInText)
            </div>
        </li>

        <li class="utility-nav__item utility-nav__item--menu js-main-menu-toggle">
            <div class="utility-nav__inner">
                <div class="burger-menu"><span></span></div>
                <span>Menu</span>
            </div>
        </li>
    </ul>
</div>
@* end top-bar mobile *@
