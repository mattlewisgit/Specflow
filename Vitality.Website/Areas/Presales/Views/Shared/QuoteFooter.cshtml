@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Vitality.Website.Areas.Presales.PageTemplates.BasePage>

@if (Model.ShowQuoteFooter)
{
<div class="quote-footer">
    <p class="quote-footer--tab">
        <span>@Html.Raw(Model.Headline)</span>
        <a>@Html.Raw(Model.Headline)</a>
    </p>
    <div class="quote-footer--body match-width">
        @foreach (var link in Model.QuoteFooterLinks)
        {
            @RenderLink(link, m => m.Link, new { @class = "button-cta" })
        }
    </div>
</div>
}