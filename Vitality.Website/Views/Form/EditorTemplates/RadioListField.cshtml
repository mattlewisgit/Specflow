@using Sitecore.Forms.Mvc.Html
@using Sitecore.Forms.Mvc.ViewModels.Fields
@using Vitality.Website.Extensions
@model RadioListField

@using (Html.BeginField())
{
    @FormFieldWithToolTip.Create(Model.Information, Html.RadioButtonList(Html.NameFor(x => Model.Value).ToString(), Model.Items))
    // Make ShowInformation to false as default behaviour is to render information below the field
    Model.ShowInformation = false;
}
